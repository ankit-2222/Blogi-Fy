<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@400;600&display=swap" rel="stylesheet">

<style>
  :root {
    --bg-dark: #0d1117;
    --form-bg: rgba(255, 255, 255, 0.05);
    --form-border: rgba(255, 255, 255, 0.1);
    --input-bg: #161b22;
    --input-border: #30363d;
    --accent: #58a6ff;
    --btn-green: #238636;
    --btn-green-hover: #2ea043;
    --danger-bg: #da3633;
    --text-main: #c9d1d9;
    --text-bright: #f0f6fc;
  }

  * {
    box-sizing: border-box;
  }

  body {
    background-color: var(--bg-dark);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
    color: var(--text-main);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    margin: 0;
    padding: 40px 20px;
  }

  .glass-form {
    background: linear-gradient(135deg, var(--form-bg), rgba(255,255,255,0));
    border: 1px solid var(--form-border);
    backdrop-filter: blur(18px);
    -webkit-backdrop-filter: blur(18px);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.4);
    padding: 30px 40px;
    max-width: 600px;
    width: 100%;
  }

  .glass-form h3 {
    color: var(--text-bright);
    font-weight: 600;
    font-size: 24px;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .glass-form label {
    font-weight: 600;
    color: var(--text-main);
    display: block;
    margin-bottom: 0.5rem;
  }

  .glass-form input,
  .glass-form textarea {
    background-color: var(--input-bg);
    color: var(--text-bright);
    border-radius: 8px;
    border: 1px solid var(--input-border);
    padding: 10px;
    width: 100%;
    margin-bottom: 1.2rem;
    transition: border 0.3s ease, box-shadow 0.3s ease;
  }

  .glass-form input:focus,
  .glass-form textarea:focus {
    border-color: var(--accent);
    outline: none;
    box-shadow: 0 0 0 3px rgba(56, 139, 253, 0.2);
  }

  .glass-form textarea {
    min-height: 150px;
    resize: vertical;
  }

  .glass-form input[type="file"] {
    padding: 10px;
    background-color: #21262d;
    color: var(--text-main);
    border: 1px dashed var(--input-border);
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .glass-form input[type="file"]::-webkit-file-upload-button {
    background-color: var(--btn-green);
    color: white;
    border: none;
    padding: 8px 14px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    margin-right: 10px;
    transition: background-color 0.3s ease;
  }

  .glass-form input[type="file"]::-webkit-file-upload-button:hover {
    background-color: var(--btn-green-hover);
  }

  .btn-primary {
    background-color: var(--btn-green);
    color: white;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    padding: 12px;
    width: 100%;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: var(--btn-green-hover);
  }

  .alert-danger {
    background-color: var(--danger-bg);
    color: #fff;
    border-radius: 8px;
    padding: 10px;
    margin-bottom: 16px;
    text-align: center;
    font-size: 0.95rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    body {
      padding: 30px 16px;
    }

    .glass-form {
      padding: 25px 30px;
      border-radius: 14px;
    }

    .glass-form h3 {
      font-size: 20px;
    }

    .btn-primary {
      padding: 10px;
      font-size: 15px;
    }
  }

  @media (max-width: 480px) {
    .glass-form {
      padding: 20px 20px;
      border-radius: 12px;
    }

    .glass-form h3 {
      font-size: 18px;
    }

    .btn-primary {
      padding: 8px;
      font-size: 14px;
    }

    .alert-danger {
      font-size: 0.9rem;
    }
  }
</style>
